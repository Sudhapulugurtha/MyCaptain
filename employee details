#include <stdio.h>
 
/*structure declaration*/
struct employee{
    char    name[30];
    int     age;
    double   phonenumber;
    float   salary;
};
 
int main()
{
    /*declare structure variable*/
    struct employee emp;
     
    /*read employee details*/
    printf("\nEnter details :\n");
    printf("Name ?:");          
    gets(emp.name);
    printf("Age?:");            
    scanf("%d",&emp.age);
    printf("Phone number?:");            
    scanf("%lf",&emp.phonenumber);
    printf("Salary ?:");        
    scanf("%f",&emp.salary);
     
    /*print employee details*/
    printf("\nEntered detail is:");
    printf("\nName: %s"   ,emp.name);
    printf("\nAge: %d"     ,emp.age);
    printf("\nPhone Number:%lf"     ,emp.phonenumber);
    printf("\nSalary: %f\n",emp.salary);
    return 0;
}
